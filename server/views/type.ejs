<div class="box super-shadow">
    <div class="sub-header" ng-if="!winner">
        Start typing now!
    </div>
    <div class="sub-header" ng-if="winner">
        <span class="glyphicon glyphicon glyphicon-star"></span>
        <b>{{ winner }}</b> won this contest
        <span class="glyphicon glyphicon glyphicon-star"></span>
    </div>
    <div class="form-group unselectable">
        <div ng-repeat="user in users track by $index">
            <div class="user-row">
                <progressbar class="progress-striped" max="words.length" value="user.progress" type="warning">
                    <nobr>&nbsp;{{ user.name }} - {{ progress(user) }}</nobr>
                </progressbar>
            </div>
        </div>
    </div>
    <div class="form-group super-text unselectable">
        <span ng-class="wordClass($index)" ng-repeat="word in words track by $index"><span>{{ word }}</span> </span>
    </div>
    <div class="form-group">
        <input ng-show="!wordsDone()" ng-keyup="checkWord($event)" type="text" ng-model="word" ng-class="inputClass()" id="the-input" class="form-control input-lg" placeholder="Type words here...">
    </div>
</div>
<div class="form-group text-center">
    <a ng-show="wordsDone()" class="btn btn-success btn-lg" href="#/">Start Another Contest!</a>
</div>