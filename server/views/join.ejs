<div class="box super-shadow">
    <div class="sub-header">
        Please identify yourself to join!
    </div>
    <div class="form-group">
        <input ng-model="user" type="text" class="form-control input-lg" placeholder="Your name goes here...">
    </div>
    <hr/>
    <div class="form-group row">
        <div class="col-xs-7">
            <div id="g-recaptcha"></div>
        </div>
        <div class="col-xs-5 text-center">
            <a href="http://github.com/gevorg/typeitquick" target="_blank">
                <img src="/assets/forkme.png" height="80">
            </a>
        </div>
    </div>
</div>
<div class="alert alert-error text-center" ng-if="errorMsg">
    {{ errorMsg }}
</div>
<div class="text-center form-group">
    <button type="button" class="btn btn-lg btn-success" ng-click="join()" ng-disabled="processing">Join Contest!</button>
</div>